{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "incremental": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "lib", "coverage", "jest.config.ts"]
}
